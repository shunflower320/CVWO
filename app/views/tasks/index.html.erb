<h1>Listing tasks</h1>
 <%= link_to 'New task', new_task_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
  </tr>
 
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.title %></td>
      <td><%= task.text %></td>
      <td><%= link_to 'Show', task_path(task) %></td>
      <td><%= link_to 'Edit', edit_task_path(task) %></td>
      <td><%= link_to 'Delete', task_path(task),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
      <td><%= raw task.tag_list %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', welcome_index_url %>